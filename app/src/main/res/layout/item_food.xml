<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/icon_food_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/liquid"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_food"/>

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus_16px"
            app:layout_constraintTop_toTopOf="@+id/icon_food_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/icon_food_category"
            app:layout_constraintEnd_toStartOf="@id/icon_food_category"/>

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_16px"
            app:layout_constraintTop_toTopOf="@+id/icon_food_category"
            app:layout_constraintStart_toEndOf="@+id/icon_food_category"
            app:layout_constraintBottom_toBottomOf="@+id/icon_food_category"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/count_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 литров"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_food_category"
            android:textAlignment="center"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>