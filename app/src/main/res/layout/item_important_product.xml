<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <ImageView
            android:id="@+id/icon_food_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/product_category_liquid_64"
            android:layout_marginVertical="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/name_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_food_category"
            app:layout_constraintBottom_toTopOf="@id/count_food"
            />

        <EditText
            android:id="@+id/count_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/name_food"
            app:layout_constraintStart_toEndOf="@id/icon_food_category"
            app:layout_constraintBottom_toTopOf="@id/max"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="литров"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/count_food"
            app:layout_constraintStart_toEndOf="@id/count_food"
            app:layout_constraintBottom_toBottomOf="@id/count_food"
            android:textAlignment="center"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove_32"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/unit"
            app:layout_constraintStart_toEndOf="@id/unit"
            app:layout_constraintBottom_toBottomOf="@id/unit"
            android:background="@color/transparent"
       />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_32"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/minus"
            app:layout_constraintStart_toEndOf="@id/minus"
            app:layout_constraintBottom_toBottomOf="@id/minus"
            android:background="@color/transparent"
          />

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Максимум"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/count_food"
            app:layout_constraintStart_toStartOf="@id/count_food"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <EditText
            android:id="@+id/max_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/max"
            app:layout_constraintStart_toEndOf="@+id/max"
            app:layout_constraintBottom_toBottomOf="@+id/max"
            />

        <TextView
            android:id="@+id/max_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="литров "
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/max_count"
            app:layout_constraintStart_toEndOf="@id/max_count"
            app:layout_constraintBottom_toBottomOf="@+id/max_count"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/max_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove_32"
            android:layout_marginStart="15dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="@id/max_unit"
            app:layout_constraintStart_toEndOf="@id/max_unit"
            app:layout_constraintBottom_toBottomOf="@+id/max_unit"
           />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/max_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_32"
            android:layout_marginStart="15dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="@id/max_minus"
            app:layout_constraintStart_toEndOf="@id/max_minus"
            app:layout_constraintBottom_toBottomOf="@id/max_minus"
         />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>